<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="@dimen/_20sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_14sdp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnClose"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:src="@drawable/remove"

                 />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="NEW TRANSACTION"
                android:fontFamily="@font/nunito_extra_bold"
                android:gravity="center"
                android:textColor="@color/grey"
                android:textStyle="bold"
                android:textSize="16sp" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textCurrency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:gravity="end"
                android:text="$"
                android:fontFamily="@font/nunito_extra_bold"
                android:textColor="@color/white_dark"
                android:textSize="@dimen/_18ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/editTextAmount"
                />

            <EditText
                android:id="@+id/editTextAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="0           "
                android:fontFamily="@font/nunito_extra_bold"
                android:maxLines="1"
                android:inputType="numberDecimal"
                android:maxLength="9"
                android:textColor="@color/white_dark"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/_46ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/layoutInExButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnExpense"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_bold"
                android:text="EXPENSE"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnIncome"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_bold"
                android:background="@drawable/rectangular_background"
                android:text="INCOME"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_24sdp"
            android:background="@color/grey">
        </LinearLayout>

        <!-- Category -->
        <LinearLayout
            android:id="@+id/layoutCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_10sdp">

            <ImageView
                android:id="@+id/imageCategory"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:src="@drawable/category"
                />

            <TextView
                android:id="@+id/TextCategory"
                android:layout_width="@dimen/_88sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:text="Category :"
                android:fontFamily="@font/nunito_medium"
                android:textColor="@color/white_dark"
                android:textSize="@dimen/_16ssp" />

            <TextView
                android:id="@+id/EditTextCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:hint="Select Category"
                android:textColorHint="@color/grey"
                android:fontFamily="@font/nunito_bold"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_16ssp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/grey">
        </LinearLayout>

        <!-- From -->
        <LinearLayout
            android:id="@+id/layoutFrom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_10sdp">

            <ImageView
                android:id="@+id/imageFrom"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:src="@drawable/from"
               />

            <TextView
                android:id="@+id/textFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="From : "
                android:fontFamily="@font/nunito_medium"
                android:textColor="@color/white_dark"
                android:textSize="@dimen/_16ssp" />

            <TextView
                android:id="@+id/EditTextFrom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:hint="Select from"
                android:textColorHint="@color/grey"
                android:fontFamily="@font/nunito_bold"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_16ssp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/grey">
        </LinearLayout>

        <!-- Note -->
        <LinearLayout
            android:id="@+id/layoutNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_10sdp">

            <ImageView
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:src="@drawable/note"
                />

            <EditText
                android:id="@+id/etNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:hint="Add a note"
                android:fontFamily="@font/nunito_medium"
                android:textColorHint="@color/white_dark"
                android:textColor="@color/white_dark"
                android:textSize="@dimen/_16ssp"
                android:background="@null" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/grey">
        </LinearLayout>

        <!-- Date -->
        <LinearLayout
            android:id="@+id/layoutDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_10sdp">

            <ImageView
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:src="@drawable/calender"
                />

            <TextView
                android:id="@+id/textDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:text="Today"
                android:fontFamily="@font/nunito_medium"
                android:textColor="@color/white_dark"
                android:textSize="@dimen/_16ssp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/grey">
        </LinearLayout>

        <Button
            android:id="@+id/btnSplit"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:text="Split"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/light_black"
            android:backgroundTint="#FFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:text="SAVE"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/light_black"
            android:backgroundTint="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
