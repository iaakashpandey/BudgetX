            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textNotification"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
