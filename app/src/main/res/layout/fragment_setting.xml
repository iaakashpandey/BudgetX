                android:fontFamily="@font/nunito_bold"
                android:textColor="@color/white_dark"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintBottom_toBottomOf="@+id/imageSuggestion"
                app:layout_constraintStart_toEndOf="@+id/imageSuggestion"
