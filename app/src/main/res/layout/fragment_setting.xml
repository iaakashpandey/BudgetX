                android:layout_marginStart="@dimen/_12sdp"
                android:padding="@dimen/_6sdp"
                android:src="@drawable/bug"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
